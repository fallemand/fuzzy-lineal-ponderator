<configuration>
  <system.webServer>
    <defaultDocument>
      <files>
        <add value="index.aspx" />
      </files>
    </defaultDocument>
  </system.webServer>
  <system.web>
    <compilation debug="true" targetFramework="4.5" />
    <authentication mode="Forms">
      <forms loginUrl="index.aspx" defaultUrl="mis-proyectos.aspx" name="SBRoles" />
    </authentication>
    <siteMap defaultProvider="XmlSiteMapProvider" enabled="true">
      <providers>
        <add name="XmlSiteMapProvider"
          description="Default SiteMap provider."
          type="System.Web.XmlSiteMapProvider "
          siteMapFile="Web.sitemap"
          securityTrimmingEnabled="true" />
      </providers>
    </siteMap>
    <httpRuntime targetFramework="4.5" />
  </system.web>

  <location path="mis-proyectos.aspx">
    <system.web>
      <authorization>
        <allow roles="Usuario" />
        <deny users="*" />
      </authorization>
    </system.web>
  </location>
  <location path="criterios.aspx">
    <system.web>
      <authorization>
        <allow roles="Usuario" />
        <deny users="*" />
      </authorization>
    </system.web>
  </location>
  <location path="variables.aspx">
    <system.web>
      <authorization>
        <allow roles="Usuario" />
        <deny users="*" />
      </authorization>
    </system.web>
  </location>
  <location path="alternativas.aspx">
    <system.web>
      <authorization>
        <allow roles="Usuario" />
        <deny users="*" />
      </authorization>
    </system.web>
  </location>
  <location path="generar-informe.aspx">
    <system.web>
      <authorization>
        <allow roles="Usuario" />
        <deny users="*" />
      </authorization>
    </system.web>
  </location>
  <location path="informe.aspx">
    <system.web>
      <authorization>
        <allow roles="Usuario" />
        <deny users="*" />
      </authorization>
    </system.web>
  </location>

  <connectionStrings>
    <add name="localhost" connectionString="Data Source=localhost\SQLEXPRESS;Initial Catalog=FuzzyLP ;Integrated Security=True"/>
  </connectionStrings>
</configuration>